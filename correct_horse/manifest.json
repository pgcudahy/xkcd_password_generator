{
  "manifest_version": 3,
  "name": "Correct Horse Password Generator",
  "version": "1.0",
  "description": "Generates XKCD-style passwords from selected text fields",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "offscreen"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "web_accessible_resources": [{
    "resources": ["offscreen.html", "offscreen.js"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
